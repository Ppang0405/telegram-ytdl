{
  "name": "telegram-ytdl",
  "version": "0.0.1",
  "description": "download videos easily on telegram using youtube-dl",
  "main": "src/index.ts",
  "scripts": {
    "test": "echo 'no tests'",
    "start": "npm run build && node -r dotenv/config ./src/index.js",
    "build": "rimraf build && tsc",
    "commit": "cz -S",
    "dev": "nodemon"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vaaski/telegram-ytdl.git"
  },
  "keywords": [
    "telegram",
    "youtube",
    "download",
    "video",
    "audio"
  ],
  "author": "vaaski <admin@vaa.ski>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/vaaski/telegram-ytdl/issues"
  },
  "homepage": "https://github.com/vaaski/telegram-ytdl#readme",
  "devDependencies": {
    "@types/node": "^14.14.13",
    "@typescript-eslint/eslint-plugin": "^4.15.0",
    "@typescript-eslint/parser": "^4.15.0",
    "commitizen": "^4.2.2",
    "dotenv": "^8.2.0",
    "eslint": "^7.19.0",
    "eslint-plugin-prettier": "^3.3.1",
    "nodemon": "^2.0.6",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "chalk": "^4.1.0",
    "execa": "^5.0.0",
    "got": "^11.8.1",
    "telegraf": "^3.38.0",
    "ytdl-core": "^4.5.0"
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "env": {
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2020
    },
    "rules": {
      "@typescript-eslint/member-delimiter-style": [
        "error",
        {
          "multiline": {
            "delimiter": "none"
          }
        }
      ],
      "@typescript-eslint/no-explicit-any": [
        "off"
      ],
      "@typescript-eslint/indent": [
        "error",
        2
      ]
    },
    "overrides": [
      {
        "files": [
          "**/__tests__/*.{j,t}s?(x)",
          "**/tests/unit/**/*.spec.{j,t}s?(x)"
        ],
        "env": {
          "jest": true
        }
      }
    ]
  },
  "prettier": {
    "semi": false,
    "trailingComma": "es5",
    "arrowParens": "avoid",
    "printWidth": 90,
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": false
  }
}
